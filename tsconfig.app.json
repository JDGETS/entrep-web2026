{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.css",
    "src/**/*.icon",
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/*.vue"
  ],
  "exclude": ["src/**/__tests__/*", "**/*.min.js"],
  "compilerOptions": {
    "module": "ESNext",
    "composite": true,
    "resolvePackageJsonExports": false,
    "baseUrl": ".",
    "paths": {
      "@ogmatechnologies/*": ["./src/*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
